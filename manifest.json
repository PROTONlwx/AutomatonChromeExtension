{
  "name": "Create Click/Input Automaton",
  "description": "Allow user to create events like click button, input text, wait a while, or repeat steps. Events Series can complete repetitive tasks accurately.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["mousedown.js", "actionUtils.js", "action.js"]
    }
  ],
  "permissions": ["activeTab", "scripting", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/auto16.png",
      "32": "/images/auto32.png",
      "48": "/images/auto48.png",
      "128": "/images/auto128.png"
    }
  },
  "icons": {
    "16": "/images/auto16.png",
    "32": "/images/auto32.png",
    "48": "/images/auto48.png",
    "128": "/images/auto128.png"
  }
}
